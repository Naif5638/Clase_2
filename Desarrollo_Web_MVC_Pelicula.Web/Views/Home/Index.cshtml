@model IEnumerable<Desarrollo_Web_MVC_Pelicula.Web.Models.Pelicula>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table>
            <thead>
                <tr>
                    <td>Codigo</td>
                    <td>Titulo</td>
                    <td>Director</td>
                    <td>Autor Principal</td>
                    <td>Num Autores</td>
                    <td>Duracion</td>
                    <td>Estreno</td>
                    <td>Borrar</td>
                    <td>Modificar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var pelicula in Model)
                {
                    <tr>
                        <td>@pelicula.Codigo</td>
                        <td>@pelicula.Titulo</td>
                        <td>@pelicula.Director</td>
                        <td>@pelicula.AutorPrincipal</td>
                        <td>@pelicula.NumAutores</td>
                        <td>@pelicula.Duracion</td>
                        <td>@pelicula.Estreno</td>
                        <td>
                            <a href="/Home/Borrar?cod=@pelicula.Codigo">Borrar?</a>
                        </td>
                        <td>
                            <a href="/Home/Modificar?cod=@pelicula.Codigo">Modificar?</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <a href="/Home/Agregar">Agregar</a>
    </div>
</body>
</html>
